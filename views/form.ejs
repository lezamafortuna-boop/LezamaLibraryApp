<%- include('./partials/header') %>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">

        <h2 class="mb-4"><%= title %></h2>

        <% if (message) { %>
            <div class="alert alert-info"><%= message %></div>
        <% } %>

        <form method="POST" action="<%= action %>">

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="title" class="form-control" 
                       value="<%= book ? book.title : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">ISBN</label>
                <input name="isbn" class="form-control" 
                       value="<%= book ? book.isbn : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Publisher</label>
                <input name="publisher" class="form-control" 
                       value="<%= book ? book.publisher : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Inventory</label>
                <input name="inventory" type="number" class="form-control" 
                       value="<%= book ? book.inventory : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Units Sold</label>
                <input name="unitsSold" type="number" class="form-control" 
                       value="<%= book ? book.unitsSold : '' %>">
            </div>

            <div class="mb-3">
                <label class="form-label">Tags (comma separated)</label>
                <input name="tags" class="form-control" 
                       value="<%= book ? book.tags.join(', ') : '' %>">
            </div>

            <button class="btn btn-primary">Save</button>
        </form>

    </div>
</div>

<%- include('./partials/footer') %>